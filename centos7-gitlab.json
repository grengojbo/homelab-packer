{
  "builders":
  [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "headless": true,
      "qemuargs": [
        [ "-m", "2048M" ],
        [ "-serial", "file:serial.out" ],
        [ "-smp", "cpus=1,maxcpus=16,cores=2" ]
      ],
      "disk_interface": "virtio",
      "disk_size": 100000,
      "format": "qcow2",
      "net_device": "virtio-net",

      "iso_url": "https://mirror.dal10.us.leaseweb.net/centos/7.7.1908/isos/x86_64/CentOS-7-x86_64-Minimal-1908.iso",
      "iso_checksum": "9a2c47d97b9975452f7d582264e9fc16d108ed8252ac6816239a3b58cef5c53d",
      "iso_checksum_type": "sha256",


      "vm_name": "centos7-gitlab",
      "output_directory": "centos7-gitlab-output",

      "http_directory": "centos",
      "http_port_min": 10082,
      "http_port_max": 10089,

      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,

      "ssh_username": "root",
      "ssh_password": "root",
      "ssh_port": 22,
      "ssh_wait_timeout": "1200s",

      "boot_wait": "40s",
      "boot_command": [
        "<up><wait><tab><wait> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/c7-kvm-ks.cfg<enter><wait>"
      ],

      "shutdown_command": "shutdown -P now"
    }
  ],

  "provisioners":
  [
    {
      "type": "shell",
      "pause_before": "5s",
      "inline": [
        "echo '%wheel        ALL=(ALL)       NOPASSWD: ALL' >> /etc/sudoers",
        "yum install -y yum-utils device-mapper-persistent-data lvm2 nmon",
        "yum-config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo",
        "yum install -y docker-ce docker-ce-cli containerd.io && systemctl enable docker && systemctl start docker",
        "curl -L https://packages.gitlab.com/install/repositories/runner/gitlab-runner/script.rpm.sh | bash",
        "yum update -y && yum install -y gitlab-runner",
        "usermod -aG docker gitlab-runner",
        "usermod -aG wheel gitlab-runner",
        "yum clean all"
      ]
    }
  ]
}
